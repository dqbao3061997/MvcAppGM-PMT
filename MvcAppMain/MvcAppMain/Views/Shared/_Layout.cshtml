<!DOCTYPE html>
<html>
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="../../Content/booststrap.min.css" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="../../Scripts/bootstrap.min.js" type="text/javascript"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <img class="img-responsive" src="~/Images/Business-Banner.png" style="width:100%; height:200px" />
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/User/Login"><span class="glyphicon glyphicon-home"></span></a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="/User/Login">Trang chủ</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Chức năng<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="/HoSoBenhNhan/DanhSachKhamBenh">Nhập thông tin bệnh nhân</a></li>
                        <li><a href="/Thuoc/Index">Nhập thông tin thuốc</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Danh sách báo cáo<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Lập danh sách khám bệnh</a></li>
                        <li><a href="#">Lập phiếu khám bệnh</a></li>
                        <li><a href="#">Tra cứu bệnh nhân</a></li>
                        <li><a href="#">Lập hóa đơn thanh toán</a></li>
                        <li><a href="#">Lập báo cáo tháng</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Thay đổi quy định</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (Session["Username"] != null)
                {
                    <li><a href="~/User/Login"><span class="glyphicon glyphicon-log-in"> </span> Hi! @Session["Username"].ToString()</a></li>
            
                    }

               
                <li><a href="~/User/Create"><span class="glyphicon glyphicon-user"> </span> Sign Up</a></li>
            </ul>
        </div>
    </nav>


    <div class="row">
        <div class="col-sm-2">
            <div class="list-group">
                <h3>Chức năng</h3>
                <a href="#" class="list-group-item active">Thông tin bệnh nhân</a>
                <a href="#" class="list-group-item">Thông tin thuốc</a>
            </div>
            <br />
            <div class="list-group">
                <h3>Danh sách báo cáo</h3>
                <a href="#" class="list-group-item active">Lập danh sách khám bệnh</a>
                <a href="#" class="list-group-item">Lập phiếu khám bệnh</a>
                <a href="#" class="list-group-item">Tra cứu bệnh nhân</a>
                <a href="#" class="list-group-item">Lập hóa đơn thanh toán</a>
                <a class="list-group-item dropdown-toggle" data-toggle="dropdown" href="#">Lập báo cáo tháng<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="#" class="list-group-item active">Báo cáo doanh thu theo ngày</a></li>
                    <li><a href="#" class="list-group-item">Báo cáo sử dụng thuốc</a></li>
                </ul>
            </div>
        </div>

        <div class="col-sm-10">
            @RenderBody()

        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
