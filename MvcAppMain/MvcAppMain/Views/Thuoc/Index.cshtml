@model IEnumerable<MvcAppMain.Models.Thuoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<fieldset>
    <legend>
        @if (Session["Roles"].Equals("admin"))

    {
        <h2>DANH SÁCH THUỐC</h2>

        <p>
            @Html.ActionLink("Thêm thuốc mới", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.Label("Đơn Vị")
                </th>
                <th>
                    @Html.Label("Tên Thuốc")
                </th>
                <th>
                    @Html.Label("Số Lượng Thuốc")
                </th>
                <th>
                    @Html.Label("Đơn Giá Thuốc")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DonVi.TenDonVi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenThuoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa thông tin thuốc", "Edit", new { id = item.ID_Thuoc }) |
                    @Html.ActionLink("Xem thông tin thuốc chi tiết", "Details", new { id = item.ID_Thuoc }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID_Thuoc })
                </td>
            </tr>
    }

        </table>
}
else
{
    <text>
        @Session["Username"].ToString()! You should be an admin to have valid to view this page
    </text>
}
    </legend>
            </fieldset>
